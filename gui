import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.event.*;

public class combined extends JPanel {
    private JButton jcomp1;
    private JLabel jcomp2;

    public combined() {
    	setBackground(new Color(0,0,0,1));
    	//setAlignmentX(JComponent.BOTTOM_ALIGNMENT); 
        //construct components
        jcomp1 = new JButton ("click");
        jcomp2 = new JLabel ("name");

        //adjust size and set layout
        setPreferredSize (new Dimension (550, 200));
        setLayout(null);

        //add components
        add (jcomp1);
        add (jcomp2);

        //set component bounds (only needed by Absolute Positioning)
        jcomp1.setBounds (835, 485, 200, 80);
        jcomp2.setBounds (35, 85, 100, 25);
    }


    public static void main (String[] args) {
        JFrame frame = new JFrame ("Shcedular");
        frame.setDefaultCloseOperation (JFrame.EXIT_ON_CLOSE);
        frame.setSize(620,900);
        frame.setContentPane(new JLabel(new ImageIcon("C:\\Users\\Rohan Savalgi\\OneDrive\\Pictures\\final5.jpg")));
        frame.setLayout(new FlowLayout());
        frame.getContentPane().add (new combined());
        //frame.pack();
        frame.setVisible (true);
        
    }
}
